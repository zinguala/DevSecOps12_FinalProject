pipeline {
    agent any

   stages {
        stage('playbook-gitpullrepo') {
            steps {
                git branch: 'ansible', url: 'https://github.com/zinguala/DevSecOps12_FinalProject.git'
            }
        }

    stage ('Check for existence of ansible/playbooks dir') {
       
    steps {
        script {
            if (!fileExists('/etc/ansible/playbooks')) {
               sh 'sudo mkdir /etc/ansible/playbooks'
            }
            }
        }
     }

        stage('copy playbook to ansible dir') {
            steps {
                sh 'sudo cp web1playbook-6replicas.yml /etc/ansible/playbooks/web1playbook-6replicas.yml'
    
            }
        }
        
         stage('web config-gitpullrepo') {
            steps {
                git branch: 'minikube-cluster', url: 'https://github.com/zinguala/DevSecOps12_FinalProject.git'
            }
        }

         stage ('Check for existence of etc/minikube_configs dir') {
       
    steps {
        script {
            if (!fileExists('/etc/minikube_configs')) {
               sh 'sudo mkdir /etc/minikube_configs'
            }
            }
        }
     }

        stage('copy minikube config deployment file to etc') {
            steps {
                sh 'sudo cp client-deployment-6replicas.yml /etc/minikube_configs/client-deployment-6replicas.yml'
                     
            }
        }
        stage('copy minikube config service file to etc') {
            steps {
                sh 'sudo cp client-deployment-service.yml /etc/minikube_configs/client-deployment-service.yml' 
            }
        }
        stage('runplaybook') {
            steps {
                sh 'sudo ansible-playbook /etc/ansible/playbooks/web1playbook-6replicas.yml -i /etc/ansible/inventory/inventory -vvv'
    
            }
        }
  }
}
